<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>Blog Title<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag "blog/normalize","blog/all" %>
  </head>
  <body>
    <header>
      <%= image_tag 'blog/icon.png', :width => '100', :class => 'icon' %>
      <%= link_to 'taiki45 blog', '/blog' %>
    </header>

    <div id="main" role="main">
      <%= yield %>
    </div>

    <aside>
      <h3>Recent Articles</h3>
      <ul>
        <% blog.articles[0...10].each do |article| %>
          <li><%= link_to article.title, article %> <span class="date"><%= article.date.strftime("%Y-%m-%d") %></span></li>
        <% end %>
      </ul>

      <h3>Tags</h3>
      <ul>
        <% blog.tags.each do |tag, articles| %>
          <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
        <% end %>
      </ul>

      <h3>By Year</h3>
      <ul>
        <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
          <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
        <% end %>
      </ul>

      <h3>Author</h3>
      <p><%= link_to 'taiki45', '/' %></p>
    </aside>
  </body>
</html>
